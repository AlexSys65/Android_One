<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="@dimen/field_constraint_layout">

    <TextView
        android:id="@+id/resultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/result"
        android:textAlignment="viewEnd"
        android:textSize="@dimen/resultScreen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/preText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pre_result"
        android:textAlignment="viewEnd"
        android:textSize="@dimen/preScreen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultText" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_CLEAR"
            android:text="@string/btn_clear"
            android:onClick="cancelClick"
            style="@style/cancel_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_DIV"
            android:text="@string/btn_Div"
            android:onClick="operationClick"
            style="@style/actions_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_MULT"
            android:text="@string/btn_Mult"
            android:onClick="operationClick"
            style="@style/actions_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_BS"
            android:text="@string/btn_backS"
            android:onClick="backSpaceClick"
            style="@style/actions_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_7"
            android:text="@string/btn_7"
            android:onClick="numberBtnClick"
            style="@style/number_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_8"
            android:text="@string/btn_8"
            android:onClick="numberBtnClick"
            style="@style/number_btn"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_9"
            android:text="@string/btn_9"
            android:onClick="numberBtnClick"
            style="@style/number_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_Minus"
            android:text="@string/btn_Minus"
            android:onClick="operationClick"
            style="@style/actions_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_4"
            android:text="@string/btn_4"
            android:onClick="numberBtnClick"
            style="@style/number_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_5"
            android:text="@string/btn_5"
            android:onClick="numberBtnClick"
            style="@style/number_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_6"
            android:text="@string/btn_6"
            android:onClick="numberBtnClick"
            style="@style/number_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_plus"
            android:text="@string/btn_Plus"
            android:onClick="operationClick"
            style="@style/actions_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_1"
            android:text="@string/btn_1"
            android:onClick="numberBtnClick"
            style="@style/number_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_2"
            android:text="@string/btn_2"
            android:onClick="numberBtnClick"
            style="@style/number_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_3"
            android:text="@string/btn_3"
            android:onClick="numberBtnClick"
            style="@style/number_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_RESULT"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:text="@string/btn_result"
            android:onClick="onResultClick"
            style="@style/actions_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_0"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="@string/btn_0"
            android:onClick="numberBtnClick"
            style="@style/number_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_point"
            android:text="@string/btn_point"
            android:onClick="pointBtnClick"
            style="@style/number_btn" />
    </GridLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="144dp"
        android:layout_height="101dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/hummingbird" />


</androidx.constraintlayout.widget.ConstraintLayout>