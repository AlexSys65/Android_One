<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="@dimen/field_constraint_layout">

    <TextView
        android:id="@+id/resultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/result"
        android:textAlignment="viewEnd"
        android:textSize="@dimen/resultScreen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/preText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pre_result"
        android:textAlignment="viewEnd"
        android:textSize="@dimen/preScreen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultText" />

    <Button
        android:id="@+id/btn_Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        android:onClick="numbBtnClick"
        android:text="@string/btn_clear"
        android:textSize="@dimen/numBtn"
        app:layout_constraintBottom_toTopOf="@id/btn_7"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_DIV" />

    <Button
        android:id="@+id/btn_DIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="numbBtnClick"
        android:text="@string/btn_Div"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintBottom_toTopOf="@id/btn_8"
        app:layout_constraintLeft_toRightOf="@id/btn_Clear"
        app:layout_constraintRight_toLeftOf="@id/btn_MULT" />
    <Button
        android:id="@+id/btn_MULT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_Mult"
        android:onClick="numbBtnClick"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintLeft_toRightOf="@id/btn_8"
        app:layout_constraintRight_toLeftOf="@id/btn_backSpace"
        app:layout_constraintBottom_toTopOf="@id/btn_9"/>
    <Button
        android:id="@+id/btn_backSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_backS"
        android:onClick="numbBtnClick"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintLeft_toRightOf="@id/btn_MULT"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_MINUS"/>

    <Button
        android:id="@+id/btn_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_7"
        android:onClick="numbBtnClick"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_8"
        app:layout_constraintBottom_toTopOf="@id/btn_4"
        app:layout_constraintHorizontal_chainStyle="spread"/>
    <Button
        android:id="@+id/btn_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_8"
        android:onClick="numbBtnClick"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintLeft_toRightOf="@id/btn_7"
        app:layout_constraintRight_toLeftOf="@id/btn_9"
        app:layout_constraintBottom_toTopOf="@id/btn_5"/>
    <Button
        android:id="@+id/btn_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_9"
        android:onClick="numbBtnClick"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintLeft_toRightOf="@id/btn_8"
        app:layout_constraintRight_toLeftOf="@id/btn_MINUS"
        app:layout_constraintBottom_toTopOf="@id/btn_6"/>
    <Button
        android:id="@+id/btn_MINUS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_Minus"
        android:onClick="numbBtnClick"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintLeft_toRightOf="@id/btn_9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_PLUS"/>

    <Button
        android:id="@+id/btn_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_4"
        android:onClick="numbBtnClick"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_5"
        app:layout_constraintBottom_toTopOf="@id/btn_1"
        app:layout_constraintHorizontal_chainStyle="spread"/>
    <Button
        android:id="@+id/btn_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_5"
        android:onClick="numbBtnClick"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintLeft_toRightOf="@id/btn_4"
        app:layout_constraintRight_toLeftOf="@id/btn_6"
        app:layout_constraintBottom_toTopOf="@id/btn_2"/>
    <Button
        android:id="@+id/btn_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_6"
        android:onClick="numbBtnClick"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintLeft_toRightOf="@id/btn_5"
        app:layout_constraintRight_toLeftOf="@id/btn_PLUS"
        app:layout_constraintBottom_toTopOf="@id/btn_3"/>
    <Button
        android:id="@+id/btn_PLUS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_Plus"
        android:onClick="numbBtnClick"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintLeft_toRightOf="@id/btn_9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_RESULT"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_1"
        android:onClick="numbBtnClick"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_2"
        app:layout_constraintBottom_toTopOf="@id/btn_0"
        app:layout_constraintHorizontal_chainStyle="spread"/>
    <Button
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="numbBtnClick"
        android:text="@string/btn_2"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintBottom_toTopOf="@id/btn_0"
        app:layout_constraintLeft_toRightOf="@id/btn_1"
        app:layout_constraintRight_toLeftOf="@id/btn_3" />
    <Button
        android:id="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_3"
        android:onClick="numbBtnClick"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintLeft_toRightOf="@id/btn_2"
        app:layout_constraintRight_toLeftOf="@id/btn_PLUS"
        app:layout_constraintBottom_toTopOf="@id/btn_POINT"/>
    <Button
        android:id="@+id/btn_RESULT"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/btn_result"
        android:onClick="numbBtnClick"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintLeft_toRightOf="@id/btn_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_3"
        app:layout_constraintBottom_toBottomOf="@id/btn_POINT"/>
    <Button
        android:id="@+id/btn_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_0"
        android:onClick="numbBtnClick"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/btn_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <Button
        android:id="@+id/btn_POINT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_point"
        android:onClick="numbBtnClick"
        android:textSize="@dimen/numBtn"
        android:insetLeft="@dimen/field_between_buttons"
        android:insetRight="@dimen/field_between_buttons"
        app:layout_constraintLeft_toRightOf="@id/btn_0"
        app:layout_constraintRight_toLeftOf="@id/btn_RESULT"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="190dp"
        android:layout_height="128dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_MULT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/preText"
        app:srcCompat="@drawable/hummingbird" />


</androidx.constraintlayout.widget.ConstraintLayout>